<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Ingresa</h1>
        <%- include ("./partials/messages") %>
        <form action="/users/login" method="POST">
          <div class="form-group">
            <label for="dni">DNI</label>
            <input
              
              id="dni"
              name="dni"
              class="form-control"
              placeholder="Nro de Documento Nacional de Identidad"
            />
          </div>
          <div class="form-group">
            <label for="password">Contraseña</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Inicia Sesión</button>
        </form>
        <p class="lead mt-4">
          ¿No tienes cuenta? <a href="/users/register">Registrate</a>
        </p>
      </div>
    </div>
  </div>