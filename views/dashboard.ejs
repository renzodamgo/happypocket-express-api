<div class="container">
    <div class="row">
      <div class="col">
        <h1 class="mt-4">Happy Pocket Dashboard</h1>
        <p class="lead mb-3">Bienvenido <%= name %></p>
      </div>

      <div class="col-3">
        <a href="/users/logout" class="btn btn-primary">Logout</a>
      </div>
    </div>

    <h2>*Prototipo</h2>
    <!-- INPUT DEL USUARIO -->
    <form action="/dashboard" method="POST">
      <div class="form-group">
        
        <label for="montIni">Monto Inicial</label>
        <input 
        type="number" 
        class="form-control" 
        id="montIni"  
        name="montIni"
        class="form-control"
        placeholder="El monto recibido"
        value="<%= typeof montIni != 'undefined' ? montIni : '' %>"
        required>
      </div>
      <div class="form-group">
        <label for="tasa">Tasa</label>
        <input
        type="number" 
        class="form-control" 
        id="tasa"  
        name="tasa"
        class="form-control"
        placeholder="Tasa Efectiva o Nominal"
        value="<%= typeof tasa != 'undefined' ? tasa : '' %>"
        required>
      </div>
      <button type="submit" class="btn btn-primary mb-3">Cacular</button>
    </form>

    <%- include ("./partials/results") %>

    <h2>Cartera de Ejemplo</h2>
    <!-- TABLA DE FACTURAS -->
    <table class="table">
      <thead>
        <tr>
          <th scope="col"># Factura</th>
          <th scope="col">Monto Recibido</th>
          <th scope="col">Monto Final</th>
          <th scope="col">TCEA</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">1</th>
          <td>15000</td>
          <td>18000</td>
          <td>12.5%</td>
        </tr>
        <tr>
          <th scope="row">2</th>
          <td>15000</td>
          <td>18000</td>
          <td>2.3%</td>
        </tr>
        <tr>
          <th scope="row">3</th>
          <td>42000</td>
          <td>60000</td>
          <td>9.2%</td>
        </tr>
      </tbody>
    </table>
</div>


